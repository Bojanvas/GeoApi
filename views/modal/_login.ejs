<!-- Modal -->
<div id="login-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
    <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Login</h4>
            </div>
            <form id='form-login' enctype="multipart/form-data" method="post" name="form-login">
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group col">
                            <input type="email" name='email' class="form-control" id="email" aria-describedby="Email" placeholder="Email">
                        </div>
                        <div class="form-group col">
                            <input type="password" name='password' class="form-control" id="password" aria-describedby="Password" placeholder="Password">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    <input type='submit' class="btn btn-primary" id='login-js' data-dismiss=""></input>
                </div>
            </form>
        </div>
    </div>
</div>